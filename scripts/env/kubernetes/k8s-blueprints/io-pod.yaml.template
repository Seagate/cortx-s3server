          devicePath: /dev/sdh
        - name: motr-sdi
          devicePath: /dev/sdi
        - name: motr-sdj
          devicePath: /dev/sdj
        - name: motr-sdk
          devicePath: /dev/sdk
        - name: motr-sdl
          devicePath: /dev/sdl
        - name: motr-sdm
          devicePath: /dev/sdm
      command:
         - "/var/data/cortx/cortx-s3server/scripts/env/kubernetes/motr-hare/container-entry-point.sh"
    - name: s3server-1
      image: <s3-cortx-all-image>
      imagePullPolicy: Never
      volumeMounts:
        - name: etc-cortx
          mountPath: /etc/cortx
        - name: var-log-cortx
          mountPath: /share/var/log/cortx
        - name: var-data-cortx
          mountPath: /var/data/cortx
