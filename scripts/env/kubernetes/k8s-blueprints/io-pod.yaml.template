apiVersion: v1
kind: Pod
metadata:
  name: io-pod
  annotations:
    "cni.projectcalico.org/ipAddrs": "[\"192.168.134.219\"]"
spec:
  containers:
    - name: haproxy
      image: <s3-cortx-all-image>
      imagePullPolicy: Never
      volumeMounts:
        - name: etc-cortx
          mountPath: /etc/cortx
        - name: var-log-cortx
          mountPath: /share/var/log/cortx
        - name: var-data-cortx
          mountPath: /var/data/cortx
      ports:
        - containerPort: 80
          name: "port80"
        - containerPort: 443
          name: "port443"
        - containerPort: 9080
          name: "port9080"
        - containerPort: 9443
          name: "port9443"
        - containerPort: 28049
          name: "port28049"
      command:
         - "/bin/bash"
         - "-c"
         - "--"
      args:
         - "/etc/cortx/s3/fix-container.sh && /opt/seagate/cortx/s3/bin/s3_start --service haproxy -c yaml:///etc/cortx/cluster.conf"
#        - "/opt/seagate/cortx/s3/bin/s3_start"
#     args:
#        - "--service"
#        - "haproxy"
#        - "-c"
#        - "yaml:///etc/cortx/cluster.conf"
    - name: authserver
      image: <s3-cortx-all-image>
      imagePullPolicy: Never
      volumeMounts:
        - name: etc-cortx
          mountPath: /etc/cortx
        - name: var-log-cortx
          mountPath: /share/var/log/cortx
        - name: var-data-cortx
          mountPath: /var/data/cortx
      command:
         - "/bin/bash"
         - "-c"
         - "--"
      args:
         - "/etc/cortx/s3/fix-container.sh && /opt/seagate/cortx/s3/bin/s3_start --service s3authserver -c yaml:///etc/cortx/cluster.conf"
#        - "/opt/seagate/cortx/s3/bin/s3_start"
#     args:
#        - "--service"
#        - "s3authserver"
#        - "-c"
#        - "yaml:///etc/cortx/cluster.conf"
    - name: hare-motr
      image: <motr-cortx-all-image>
      imagePullPolicy: Never
      volumeMounts:
        - name: var-motr
          mountPath: /var/motr
        - name: etc-cortx
          mountPath: /etc/cortx
        - name: var-log-cortx
          mountPath: /share/var/log/cortx
        - name: var-data-cortx
          mountPath: /var/data/cortx
      volumeDevices:
        - name: motr-sdb
          devicePath: /dev/sdb
        - name: motr-sdc
          devicePath: /dev/sdc
        - name: motr-sdd
          devicePath: /dev/sdd
        - name: motr-sde
          devicePath: /dev/sde
        - name: motr-sdf
          devicePath: /dev/sdf
