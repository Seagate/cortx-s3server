# This file should only contain the mandatory parameters from provisioner confstore.
# All the optional parameters should be added to default in s3_prov_config.yaml under DEFAULT_INIT.

cortx:
  common:
    product_release: "LC"
    setup_type: "VM"
    storage:
      log: "/var/log/cortx/"
      config: "/etc/cortx"
  external:
    openldap:
      admin: "admin"
      secret: "TMPL_ROOT_SECRET_KEY"
      endpoints:
      - ldap://127.0.0.1:389
      - ssl://127.0.0.1:636
      servers:
      - localhost
      - localhost
      - localhost
  s3:
    auth_secret: "TMPL_SGIAM_SECRET_KEY"
    iam:
      endpoints:
      - https://iam.seagate.com:9443
      - http://iam.seagate.com:9080
    data:
      endpoints:
      - https://s3.seagate.com:443
      - http://s3.seagate.com:80
    internal:
      endpoints:
      - http://127.0.0.1:28049
cluster:
  id: "TMPL_CLUSTER_ID"
  storage_set:
    nodes:
    - TMPL_MACHINE_ID
node:
  TMPL_MACHINE_ID:
    name: "POD-1"
    hostname: "TMPL_HOSTNAME"
    cluster_id: "TMPL_CLUSTER_ID"
    type: storage_node
